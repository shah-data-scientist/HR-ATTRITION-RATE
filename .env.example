# ============================================================================
# HR Attrition Rate - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control!

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL="postgresql://user:password@localhost:5432/hr_attrition_db"

# Database connection pool settings (optional)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10

# ============================================================================
# API CONFIGURATION
# ============================================================================
# API authentication token (REQUIRED for /predict endpoint)
# Generate a secure random token for production
# Example: openssl rand -hex 32
API_TOKEN="your_super_secret_api_token_change_me"

# API server settings
API_HOST="0.0.0.0"
API_PORT="8000"

# API URL for client applications
# Used by Streamlit UI to connect to API
API_URL="http://localhost:8000"

# ============================================================================
# STREAMLIT UI CONFIGURATION
# ============================================================================
# Streamlit server settings
STREAMLIT_SERVER_PORT="8501"
STREAMLIT_SERVER_ADDRESS="0.0.0.0"

# Security settings
STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION="false"  # Set to true for production
STREAMLIT_SERVER_ENABLE_CORS="false"  # Set to true if needed

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================
# Path to trained model artifact
MODEL_PATH="outputs/employee_attrition_pipeline.pkl"

# Model prediction threshold (default: 0.5)
# PREDICTION_THRESHOLD="0.5"

# Random seed for reproducibility
RANDOM_STATE="42"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# Log format
# LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ============================================================================
# DOCKER / DEPLOYMENT CONFIGURATION
# ============================================================================
# These are typically set in docker-compose.yml or deployment platform

# Postgres credentials (for docker-compose)
# POSTGRES_USER="user"
# POSTGRES_PASSWORD="password"
# POSTGRES_DB="hr_attrition_db"

# Container networking
# FASTAPI_CONTAINER_NAME="fastapi_app"
# POSTGRES_CONTAINER_NAME="postgres_db"

# ============================================================================
# DEVELOPMENT / TESTING
# ============================================================================
# Use different database for testing
# TEST_DATABASE_URL="postgresql://user:password@localhost:5432/hr_attrition_test_db"

# Enable debug mode (not for production)
# DEBUG="false"

# Disable authentication for local development (NEVER in production)
# DISABLE_AUTH="false"
